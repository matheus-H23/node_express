<%- include('../../common/header') %>

<form method="post" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Insira o nome da categoria" value="<%= publicacao.titulo %>">
    </div>
        
    <div class="form-group">
        <label for="conteudo">Conteúdo</label>
        <textarea class="form-control" id="conteudo" name="conteudo" placeholder="Insira o conteúdo da publicação"><%= publicacao.conteudo %></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../../common/footer') %>